{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "lib": [
      "es2018",
    ],
    "moduleResolution": "node",
    "rootDir": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@lib/*": [
        "./packages/*/src/index.ts"
      ]
    },
    "skipLibCheck": true,
  },
}
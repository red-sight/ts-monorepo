{
  "extends": "@repo/typescript-config/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./eslint.config.mjs",
    "dist"
  ]
}